/* Paper */
.paper
  @apply p-4 my-6 bg-white
  position: relative 
 
  h2
    @apply text-2xl py-1 px-2 m-1 border-blue-800
    border-left-style: solid
    border-left-width: thin

  p
    @apply py-1 px-2 m-1

  // https://css-tricks.com/snippets/css/stack-of-paper/ 
  &,
  &::before,
  &::after 
    /* Styles to distinguish sheets from one another */
    box-shadow: 1px 1px 1px rgba(0,0,0,0.25) 
    border: 1px solid #bbb 
  
  &::before,
  &::after 
    content: "" 
    position: absolute 
    height: 95% 
    width: 99% 
    background-color: #eee 
  
  &::before 
    right: 15px 
    top: 0 
    transform: rotate(-1deg) 
    z-index: -1 
  
  &::after 
    top: 5px 
    right: -5px 
    transform: rotate(1deg) 
    z-index: -2 
  